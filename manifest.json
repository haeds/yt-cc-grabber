{
  "manifest_version": 3,
  "name": "YouTube Subtitle Copier",
  "version": "1.0",
  "description": "Копирует субтитры YouTube видео в буфер обмена",
  "permissions": ["activeTab", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Выбрать и скопировать субтитры"
  }
}